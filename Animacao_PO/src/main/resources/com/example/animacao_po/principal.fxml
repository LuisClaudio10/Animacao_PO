<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.animacao_po.Principal">

    <HBox alignment="CENTER" spacing="12.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <children>
            <Button fx:id="btnRadix" onAction="#onRadixSort" prefHeight="52.0" prefWidth="156.0" styleClass="btn btn-blue btn-xl" stylesheets="@style.css" text="Radix Sort">
            <font>
               <Font size="15.0" />
            </font>
            <styleClass>
               <String fx:value="btn-blue" />
               <String fx:value="btn" />
               <String fx:value="btn-xl" />
            </styleClass></Button>
            <Button fx:id="btnCounting" onAction="#onCountingSort" prefHeight="52.0" prefWidth="156.0" styleClass="btn btn-red  btn-xl" stylesheets="@style.css" text="Counting Sort">
            <font>
               <Font size="15.0" />
            </font>
            <styleClass>
               <String fx:value="btn-red" />
               <String fx:value="btn" />
               <String fx:value="btn-xl" />
               <String fx:value="btn btn-blue btn-xl" />
            </styleClass></Button>
        </children>
    </HBox>
</AnchorPane>
